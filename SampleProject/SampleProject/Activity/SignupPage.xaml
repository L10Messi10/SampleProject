<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleProject.Activity.SignupPage">
    <StackLayout BackgroundColor="Red">
        <Frame Margin="20,60" HeightRequest="500" CornerRadius="10"
               HasShadow="True">
            <StackLayout >
                <Label Text="Sign-up" FontSize="15" FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                <Entry Placeholder="First name"/>
                <Entry Placeholder="Last name"/>
                <Editor Placeholder="Address"/>
                <Entry Placeholder="mobile #"/>
                <Entry Placeholder="email address" Keyboard="Email"/>
                <Entry Placeholder="password" IsPassword="True"/>
                <Entry Placeholder="confirm password" IsPassword="True"/>
                <Button Text="Submit" CornerRadius="20" BackgroundColor="DodgerBlue"
                        TextColor="White"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>