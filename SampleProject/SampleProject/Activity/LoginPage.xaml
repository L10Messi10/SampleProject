<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleProject.Activity.LoginPage">
    <StackLayout BackgroundColor="Aquamarine">
        <Frame VerticalOptions="CenterAndExpand" 
               CornerRadius="10" HasShadow="True"
               BackgroundColor="White" Margin="20,0,20,0"
               HeightRequest="300">
            <StackLayout>
                <Entry x:Name="emailEntry" VerticalOptions="Start"
                       Placeholder="Email Address" Keyboard="Email"/>
                <Entry x:Name="passwordEntry" VerticalOptions="Start"
                       Placeholder="Password" IsPassword="True"/>
                <Button Text="Login" Clicked="Button_OnClicked"/>
                <Label Text="Don't have an account yet?"
                       Margin="0,90,0,0"/>
                <Button Margin="165,-35,30,0" Text="Sign-up"
                        BackgroundColor="Transparent" FontSize="12"
                        x:Name="btnsignup" Clicked="Btnsignup_OnClicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>